# ~/.gitconfig

[user]
	name = ...
	email = ...
[github]
	user = ...
	token = ...
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	whitespace = indent-with-non-tab,space-before-tab,trailing-space,tabwidth=4
[apply]
	whitespace = fix
[branch]
	autosetuprebase = always
[color]
	ui = true
[color "status"]
	added = green
	changed = red
	untracked = cyan
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[difftool]
	prompt = false
[grep]
	extendRegexp = true
	lineNumber = true
[help]
	autocorrect = 1
[push]
	default = simple
