# ~/.gitconfig

[user]
	name = ...
	email = ...
[github]
	user = ...
	token = ...
[core]
	excludesfile = ~/.gitignore_global
	autocrlf = input
	whitespace = indent-with-non-tab,space-before-tab,trailing-space,tabwidth=4
[apply]
	whitespace = fix
[color]
	ui = true
[diff]
	tool = opendiff
[merge]
	tool = opendiff
[difftool]
	prompt = false
[branch]
	autosetuprebase = always
